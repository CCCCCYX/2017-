<script type="text/javascript">
	 window.onload=function (){
	 	var science = document.getElementById("science");
	 	var conditions = document.getElementById("conditions");
	 	var come = document.getElementById("come");
	 	var learn = document.getElementById("learn");
	 	var container=document.getElementById('container');
	 	var pics=document.getElementById('pics');
	 	var prev=document.getElementById('prev'); 
	 	var next=document.getElementById('next');
	 	var small = document.getElementById('small');
	 	var timer;
	 	var beixia=document.getElementById("beixia");
	 	var yuanxia=document.getElementById("yuanxia");
	 	var xuexia=document.getElementById("xuexia");
	 	var kexia=document.getElementById("kexia");
	 	var animated = false;

	 
	 	science.onmouseover = function(){
	 		small.style.width = 0+'px';
	 		kexia.style.display='block';
	 	};
	 	science.onmouseout = function(){
	 		small.style.width = 103+'px';
	 		kexia.style.display='none';
	 		};
	 	kexia.onmouseover=function(){
	 		kexia.style.display='block';
	 		}
	 	kexia.onmouseout=function(){
	 		kexia.style.display='none';
	 		}
	 	conditions.onmouseover = function(){
	 		small.style.width = 0+'px';
	 		beixia.style.display='block';
	 	};
	 	conditions.onmouseout = function(){
	 		small.style.width = 103+'px';
	 		beixia.style.display='none';
	 	};
	 	beixia.onmouseover=function(){
	 		beixia.style.display='block';
	 		}
	 	beixia.onmouseout=function(){
	 		beixia.style.display='none';
	 		}
	 	learn.onmouseover = function(){
	 		small.style.width = 0+'px';
	 		xuexia.style.display='block';
	 	};
	 	learn.onmouseout = function(){
	 		small.style.width = 103+'px';
	 		xuexia.style.display='none';
	 	};
	 	xuexia.onmouseover=function(){
	 		xuexia.style.display='block';
	 		}
	 	xuexia.onmouseout=function(){
	 		xuexia.style.display='none';
	 		}
	 	come.onmouseover = function(){
	 		small.style.width = 0+'px';
	 		yuanxia.style.display='block';
	 	};
	 	come.onmouseout = function(){
	 		small.style.width = 103+'px';
	 		yuanxia.style.display='none';
	 	};
	 	yuanxia.onmouseover=function(){
	 		yuanxia.style.display='block';
	 		}
	 	yuanxia.onmouseout=function(){
	 		yuanxia.style.display='none';
	 		}
	 	function animate(offset){
	 	    animated = true;
	 	    var newLeft=parseInt(pics.style.left)+offset;
	 		var time =500;//位移总时间
	 		var interval=5;//位移间隔时间
	 		var speed=offset/(time/interval);//每次位移量

            function go(){
            	if ((speed<0&&parseInt(pics.style.left)>newLeft)||speed>0&&parseInt(pics.style.left)<newLeft) {
            		pics.style.left=parseInt(pics.style.left)+speed+'px';
         
            		setTimeout(go, interval);
            	}
            	else{
            		pics.style.left=newLeft+'px';


	 				if(newLeft>-1275){
	 					pics.style.left=-6375+'px';
	 				}
	 				if(newLeft<-6375){
	 					pics.style.left=-1275+'px';
	 				}
	 				animated = false;

            	}

            }
            go();
		}


	 	function play(){                     //自动播放
	 		timer=setInterval(function(){
                 next.onclick();
	 		},5000);
        }
        function stop(){                     //停止播放
        	clearInterval(timer);
        }


	 	  next.onclick=function(){     //左右箭头
	 	  	 if (animated) {
                    return;
                }
	 		animate(-1280);
	 	}
	
	 	prev.onclick=function(){
	 		 if (animated) {
                    return;
                }
	 		animate(1280);
	 	}
        container.onmouseover=stop;
        container.onmouseout=play;
        play();
      
    }
	
</script>
